@model CIBERVET.Models.tb_servicio

@{
    ViewBag.Title = "EliminarServicio";
    Layout = "~/Views/Layout/_Layout_Session_Admin.cshtml";
}

<h2>Eliminar Servicio</h2>

<h3>¿Estás seguro que quieres eliminar este servicio?</h3>
<div>
    <h4>Servicio</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            ID
        </dt>

        <dd>
            @Html.DisplayFor(model => model.id_servicio)
        </dd>

        <dt>
            Nombre
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nombre_servicio)
        </dd>

        <dt>
            Precio
        </dt>

        <dd>
            @Html.DisplayFor(model => model.precio_servicio)
        </dd>

        <dt>
            Descripción
        </dt>

        <dd>
            @Html.DisplayFor(model => model.descripcion_servicio)
        </dd>

        <dt>
            Horario
        </dt>

        <dd>
            @Html.DisplayFor(model => model.horario_servicio)
        </dd>

        <dt>
            Fecha
        </dt>

        <dd>
            @Html.DisplayFor(model => model.fecha_servicio)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Eliminar" class="btn btn-default" /> |
            @Html.ActionLink("Regresar a la Lista", "ListadoServicios")
        </div>
    }
</div>