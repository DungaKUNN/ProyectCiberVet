@model IEnumerable<CIBERVET.Models.ServicioForCRUD>

@{
    ViewBag.Title = "MantenimientoServicios";
    Layout = "~/Views/Layout/_Layout_Session_Veterinaria.cshtml";
}

<h2>Listado Servicios</h2>

<p>
    @Html.ActionLink("Registrar un nuevo Servicio", "RegistrarServicio")
</p>
<table class="table">
    <tr>
        <th>
            ID
        </th>
        <th>
            Nombre
        </th>
        <th>
            Precio
        </th>
        <th>
            Descripción
        </th>
        <th>
            Horario
        </th>
        <th>
            Fecha
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.idServicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.precio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.horario)
            </td>
            <td>
                @item.fecha.ToString("dd/MM/yyyy")
            </td>
            <td>
                @Html.ActionLink("Editar", "ModificarServicio", new { id = item.idServicio }) |
                @Html.ActionLink("Ver Detalle", "DetalleServicio", new { id = item.idServicio }) |
                @Html.ActionLink("Eliminar", "EliminarServicio", new { id = item.idServicio })
            </td>
        </tr>
    }
</table>