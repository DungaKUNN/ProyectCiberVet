@model CIBERVET.Models.tb_producto

@{
    ViewBag.Title = "VerProductosDetallado";
    Layout = "~/Views/Layout/_Layout_Session.cshtml";
}

<div class="shop-detail-box-main">
    <div class="container">
        <div class="row">
            <div class="col-xl-5 col-lg-5 col-md-6">
                <div id="carousel-example-1" class="single-product-slider carousel slide" data-ride="carousel">
                    <div class="carousel-inner" role="listbox">

                        <div class="carousel-item active">

                            <img class="img-fluid" width="100" height="100" src="~/FotosProductos/@Html.DisplayFor(model => model.foto1_prod)" />
                            <img class="img-fluid" width="100" height="100" src="~/FotosProductos/@Html.DisplayFor(model => model.foto2_prod)" />
                            <img class="img-fluid" width="100" height="100" src="~/FotosProductos/@Html.DisplayFor(model => model.foto3_prod)" />

                        </div>

                    </div>
                </div>
            </div>
            <div class="col-xl-7 col-lg-7 col-md-6">
                <div class="single-product-details">
                    <h2>@Html.DisplayFor(model => model.descripcionSimple_prod)</h2>

                    <h5>PRECIO:  S/. @Html.DisplayFor(model => model.precio_prod)</h5>
                    <p class="available-stock">
                        <strong>Categoria: </strong><span>
                            <a href="#">
                                <strong>@Html.DisplayFor(model => model.tb_categoria.descripcion_cate)</strong>
                            </a>
                        </span>
                    </p>
                    <p class="available-stock">
                        <strong>Unidades en Existencia: </strong><span>
                            <a href="#">
                                <strong>@Html.DisplayFor(model => model.stock_prod)</strong>
                            </a>
                        </span>
                    </p>

                    <ul>
                    </ul>

                    <div class="price-box-bar">
                        <div class="cart-and-bay-btn">

                            <p class="btn hvr-hover">@Html.ActionLink("Agregar al Carrito", "AgregarProducto", new { id = Model.id_prod })</p>

                            <p class="btn hvr-hover">@Html.ActionLink("Regresar", "CatalogoProductos")</p>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
