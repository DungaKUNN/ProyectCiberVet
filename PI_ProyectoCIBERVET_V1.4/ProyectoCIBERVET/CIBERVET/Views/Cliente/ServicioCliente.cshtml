    @model IEnumerable<CIBERVET.Models.tb_servicio>

@{
    ViewBag.Title = "ServicioCliente";
}

@{
    Layout = "~/Views/Layout/_Layout_Session.cshtml";
}





<div class="products-box">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="title-all text-center">
                    <h1>Los servicios más pedidos en Cibervet </h1>

                </div>
            </div>
        </div>

        <div class="row">

            <div class="col-lg-12">
                <div class="special-menu text-center">
                    <div class="button-group filter-button-group">
                        <button class="active" data-filter="*">Servicios</button>
                        <!--   <button data-filter=".best-seller">AMOR</button>     --------------------------->

                        @foreach (var item in ViewBag.servicios)
                        {
                            <button data-filter=".best-seller">@Html.ActionLink((string)item.descripcion_servicio, "ServicioCliente", new { id = item.id_servicio })</button>

                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="row special-list">
            @foreach (var item in Model)
            {
                <div class="col-lg-3 col-md-6 special-grid best-seller">
                    <div class="products-single fix">
                        <div class="box-img-hover">
                            <div class="type-lb">
                                <p class="sale">Sale</p>
                            </div>
                       

                            <div class="type-lb">
                                <p class="sale">@Html.ActionLink("Reservar", "AgregarServicio", new { id = item.id_servicio })</p>
                            </div>
                        </div>




                        <center>
                            <p class="sale" id="color"><strong>@Html.ActionLink("VER DETALLE SERVICIO →", "VerServiciosDetallado", new { id = item.id_servicio }) </strong></p>
                        </center>



                        <div class="why-text">
                            <div class="col-md-8"><strong>@item.descripcion_servicio</strong><br /><span> CATEGORIA: @item.horario_servicio</span></div>
                            <div class="col-md-8">PRECIO: S/. <strong>@item.precio_servicio</strong> </div>
                        </div>
                        <hr />
                    </div>
                </div>
            }
        </div>
    </div>
</div>




