@model CIBERVET.Models.usuario

@{
    Layout = "";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Iniciar Sesión</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="~/images/icons/favicon.ico" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/vendor/bootstrap/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/fonts/Linearicons-Free-v1.0.0/icon-font.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/fonts/iconic/css/material-design-iconic-font.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/vendor/animsition/css/animsition.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/vendor/daterangepicker/daterangepicker.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/cssi/util.css">
    <link rel="stylesheet" type="text/css" href="~/cssi/main.css">
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <!--===============================================================================================-->
</head>
<body>
    <div class="limiter">
        <div class="container-login100">
            <div class="login100-more" style="background-image: url('../images/menu1.jpg');"></div>
            @using (Html.BeginForm("Login2", "Cliente", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                <div class="wrap-login100 p-l-50 p-r-50 p-t-72 p-b-50">
                    <form class="login100-form validate-form">
                        <span class="login100-form-title p-b-59">
                            Iniciar Sesión
                        </span>
                        @Html.ValidationSummary(true, "La correo o contraseña son incorrectos", new { @class = "text-danger" })
                        <div class="wrap-input100 validate-input" data-validate="Se Requiere Ingresar Usuario">
                            <span class="label-input100">Usuario</span>
                            @*<input class="input100" type="text" name="name" placeholder="Usuario...">*@
                            @Html.EditorFor(model => model.correo, new { htmlAttributes = new { @class = "input100", @type = "text", @name = "name", @placeholder = "Usuario..." } })
                            <span class="focus-input100"></span>
                        </div>

                        <div class="wrap-input100 validate-input" data-validate="Se Requiere Ingresar su Contraseña">
                            <span class="label-input100">Contraseña</span>
                            @*<input class="input100" type="text" name="pass" placeholder="*************">*@
                            @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "input100", @type = "password", @name = "pass", @placeholder = "*************" } })
                            <span class="focus-input100"></span>
                        </div>






                        <div class="container-login100-form-btn">
                            <div class="cart-and-bay-btn">
                                <div class="login100-form-bgbtn"></div>
                                <button class="btn btn-info">
                                    INGRESAR
                                </button>
                            </div>

                           
                                <a class="btn btn-info" href="~/PagPrin/RegistrarCliente" role="button">
                                REGISTRAR
                                <i class="fa fa-long-arrow-right m-l-5"></i>
                            </a>
                               
                                    <a class="btn btn-info" href="~/PagPrin/Home" role="button">
                                        REGRESAR A INICIO
                                        <i class="fa fa-long-arrow-right m-l-5"></i>
                                    </a>
</div>
                    </form>
                </div>
            }
        </div>
    </div>

    <!--===============================================================================================-->
    <script src="~/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/vendor/animsition/js/animsition.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/vendor/bootstrap/js/popper.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/vendor/daterangepicker/moment.min.js"></script>
    <script src="~/vendor/daterangepicker/daterangepicker.js"></script>
    <!--===============================================================================================-->
    <script src="~/vendor/countdowntime/countdowntime.js"></script>
    <!--===============================================================================================-->
    <script src="~/jsi/main.js"></script>

</body>
</html>